<div class="container col-sm-4" ng-controller="UserAdminNewCtrl">
	<form method="post" action="/users/admin_create" enctype="multipart/form-data">
		<div class="panel panel-default">
			<div class="panel-heading"><strong>Create Admin</strong></div>
			<div class="panel-body">
				<ng-form>
					<label>First Name</label>
					<input class="form-control" type="text" name="admin[first_name]" placeholder="First name" required></input><br>
					<label>Last Name</label>
					<input class="form-control" type="text" name="admin[last_name]" placeholder="Last name"></input><br>
					<label>Email</label>
					<input class="form-control" type="email" name="admin[email]" placeholder="Email" required></input><br>
				</ng-form>
			</div>
			<div class="panel-footer">
				<button class="btn btn-default" type="submit">Create</button>
				<button class="btn btn-default" type="reset">Reset</button>
			</div>
	</form>
</div>
<div class="col-sm-4" ng-controller="QuestionEditCtrl" ng-init="init(<%= @question_id %>)">
	<form method="post" action="/questions/<%= @question_id %>" enctype="multipart/form-data">
		<div class="panel panel-default">
			<div class="panel-heading"><strong>Edit Question</strong></div>
			<div class="panel-body">
				<ng-form>
					<label>Question Text</label>
					<textarea class="form-control" name="question[question]" ng-model="question.question" placeholder="Question text" required></textarea><br>
					<label>Question Type</label>
					<select class="form-control" name="question[qtype]" ng-model="question.qtype" required>
						<option value="" style="display: none">Select question type</option>
						<option value="mcq">Single correct answer type</option>
						<option value="multi">Multiple correct answer typr</option>
						<option value="numerical">Numerical answer type</option>
					</select><br>
					<div ng-if="options">
						<label>Number of Options</label>
						<input class="form-control" type="number" name="question[no_of_options]" ng-model="question.no_of_options" placeholder="Total options" ng-model="no_of_options" required></input><br>
						<label>Options</label>
						<span ng-repeat="index in [] | range: question.no_of_options">
							<div>
								<input type="{{selection_box}}" name="question[answers][]" value="{{index}}" ng-checked="question.answers.indexOf(index + '') > -1"></input>
								<input type="text" name="question[options][]" ng-model="question.options[index]" placeholder="{{'option '+(index+1)}}" required></input>
							</div>
						</span><br>
					</div>
					<div ng-if="!options">
						<input type="text" name="question[options][]" style="display:none"></input>
						<label>Answer</label>
						<input class="form-control" type="number" name="question[answers][]" ng-model="question.answers[0]" required></input><br>
					</div>
					<label>Weightage</label>
					<input class="form-control" type="number" name="question[weightage]" ng-model="question.weightage" placeholder="Weightage" required></input><br>
					<label>Image</label>
					<input class="form-control" type="file" name="image"></input><br>
				</ng-form>
			</div>
			<div class="panel-footer">
				<button class="btn btn-default" type="submit">Update</button>
				<button class="btn btn-default" type="reset">Reset</button>
			</div>
	</form>
</div>
<div class="col-sm-2"></div>
<div class="col-sm-8" ng-controller="ProgrammingTaskNewCtrl">
	<form method="post" action="/programming_tasks.json" enctype="multipart/form-data">
		<div class="panel panel-default">
			<div class="panel-heading"><strong>Create Programming Task</strong></div>
			<div class="panel-body">
				<ng-form>
					<label>Task Name</label>
					<input type="text" class="form-control" name="programming_task[task_name]" placeholder="Task name" required></input><br>
					<label>Task</label>
					<textarea class="form-control" name="programming_task[task]" placeholder="Task" required></textarea><br>
					<label>Sample Input</label>
					<textarea class=" form-control" name="programming_task[sample_input]" placeholder="Sample input" required></textarea><br>
					<label>Sample Output</label>
					<textarea class=" form-control" name="programming_task[sample_output]" placeholder="Sample output" required></textarea><br>
					<label>Hint!</label>
					<textarea class=" form-control" name="programming_task[hint]" placeholder="Is it too hard?" required></textarea><br>
					<label>Test Cases</label>
					<div class="row">
						<div class="col-sm-1"></div>
						<div class="col-sm-3 text-center">
							<strong>Test Input</strong>
						</div>
						<div class="col-sm-3 text-center">
							<strong>Test Output</strong>
						</div>
						<div class="col-sm-3 text-center">
							<strong>Marks</strong>
						</div>
					</div>
					<div ng-repeat="i in [] | range:testCasesCount">
						<div class="row">
							<hr>
							<div class="col-sm-1">
								<strong>{{i+1}}</strong>
							</div>
							<div class="col-sm-3">
								<input type="file" class="form-control" name="test_inputs[]" ng-model="testInputs[i]" required></input>
							</div>
							<div class="col-sm-3">
								<input type="file" class="form-control" name="test_outputs[]" ng-model="testOutputs[i]" required></input>
							</div>
							<div class="col-sm-3">
								<input type="number" class="form-control" name="test_marks[]" ng-model="testMarks[i]" placeholder="Marks" required></input>
							</div>
							<div class="col-sm-1">
								<a ng-click="removeTestCase(i)">
									<i ng-if="i != 0" class="glyphicon glyphicon-remove pull-right"></i>
								</a>
							</div>
						</div>
					</div><hr>
					<a ng-click="addTestCase()">Add Test Case</a>
				</ng-form>
			</div>
			<div class="panel-footer">
				<button class="btn btn-default" type="submit">Submit</button>
			</div>
		</div>
	</form>
</div>
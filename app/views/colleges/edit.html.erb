<div ng-controller="CollegeEditCtrl" ng-init="init(<%= @college_id %>)">
	<form method="post" action="/colleges/<%= @college_id %>" enctype="application/json">
		<ng-form>
			<input type="text" name="college[institute_name]" ng-model="college.institute_name" placeholder="College name" required></input>
			<input type="text" name="college[branch_name]" ng-model="college.branch_name" placeholder="Branch name" required></input>
		</ng-form>
		<button type="submit">Submit</button>
	</form>
</div>